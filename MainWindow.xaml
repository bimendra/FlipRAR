<Window x:Class="FlipRAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlipRAR - Minimal CBR Reader" Height="700" Width="600"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_OnKeyDown">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <!-- Menu -->
      <RowDefinition/>
      <!-- Image area -->
      <RowDefinition Height="Auto"/>
      <!-- Bottom nav -->
    </Grid.RowDefinitions>

    <!-- Menu -->
    <Menu Grid.Row="0">
      <MenuItem Header="_File">
        <MenuItem Header="_Open..." Click="Open_OnClick" InputGestureText="Ctrl+O"/>
        <Separator/>
        <MenuItem Header="E_xit" Click="Exit_OnClick"/>
      </MenuItem>
    </Menu>

    <!-- Image viewer -->
    <Border Grid.Row="1" Background="#111" Padding="8">
      <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Image x:Name="ImageViewer"
                       Stretch="Uniform"
                       RenderOptions.BitmapScalingMode="Fant"/>
      </ScrollViewer>
    </Border>

    <!-- Bottom controls -->
    <DockPanel Grid.Row="2" LastChildFill="True" Margin="8">
      <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4">
        <Button x:Name="PrevBtn" Content="⟨ Prev" Width="100" Margin="6,0"
                        Click="PrevBtn_OnClick" IsEnabled="False"/>
        <TextBlock x:Name="PageLabel" Margin="12,0" VerticalAlignment="Center"
                           Foreground="Gray"/>
        <Button x:Name="NextBtn" Content="Next ⟩" Width="100" Margin="6,0"
                        Click="NextBtn_OnClick" IsEnabled="False"/>
      </StackPanel>
    </DockPanel>
  </Grid>
</Window>
